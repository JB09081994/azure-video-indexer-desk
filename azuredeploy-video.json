{
    "contentVersion": "1.0.0.0",
    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "parameters": {
        "name": {
            "type": "string"
        },
        "videoIndexerAccountId": {
            "type": "securestring"
        },
        "videoIndexerSubscriptionKey": {
            "type": "securestring"
        },
        "videoIndexerRegion": {
            "type": "string"
        }
    },
    "variables": {
        "cosmoFunctionAppName": "[concat(parameters('name'), '-cosmo')]",
        "videoFunctionAppName": "[concat(parameters('name'), '-video')]",
        "videoFunctionSAName": "[concat( 'videofs', uniquestring(variables('videoFunctionAppName'), resourceGroup().id))]",
        "videoAppInsightsName": "[variables('videoFunctionAppName')]",
        "dropInStorageAccountName": "[concat('dropin' , uniquestring(resourceGroup().id))]",
        "videoFunctionAppPackageURL": "https://github.com/l8518/azure-video-indexer-desk/releases/download/v20190807.4/videoindexer-azfunctions_20190807.4.zip",
        "Contributor": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[variables('videoFunctionAppName')]",
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('videoFunctionSAName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('videoFunctionSAName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "10.14.1"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', variables('videoAppInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "STORAGE_ACC_NAME",
                            "value": "[variables('dropInStorageAccountName')]"
                        },
                        {
                            "name": "STORAGE_KEY",
                            "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('dropInStorageAccountName')), '2015-05-01-preview').key1]"
                        },
                        {
                            "name": "VIDEO_INDEXER_ACCOUNT_ID",
                            "value": "[parameters('videoIndexerAccountId')]"
                        },
                        {
                            "name": "VIDEO_INDEXER_SUBSCRIPTION_KEY",
                            "value": "[parameters('videoIndexerSubscriptionKey')]"
                        },
                        {
                            "name": "VIDEO_INDEXER_REGION",
                            "value": "[parameters('videoIndexerRegion')]"
                        },
                        {
                            "name": "VIDEO_INDEXER_FINISHED_HOOK",
                            "value": "[concat('https://', variables('cosmoFunctionAppName'),'.azurewebsites.net/api/OnIndexingFinished','&code=', listKeys(resourceId('Microsoft.Web/sites/functions', variables('cosmoFunctionAppName') , 'OnIndexingFinished' ) ,'2016-08-01').default)]"
                        }
                    ]
                },
                "name": "[variables('videoFunctionAppName')]",
                "clientAffinityEnabled": false,
                "reserved": false
            },
            "resources": [
                {
                    "type": "Microsoft.Storage/storageAccounts/providers/roleAssignments",
                    "apiVersion": "2017-05-01",
                    "name": "[concat(variables('dropInStorageAccountName'), '/Microsoft.Authorization/', guid(resourceGroup().id, subscription().subscriptionId, 'funcStorageAuth'))]",
                    "properties": {
                        "roleDefinitionId": "[variables('Contributor')]",
                        "principalId": "[reference(concat('Microsoft.Web/sites/', variables('videoFunctionAppName')), '2018-02-01', 'Full').identity.principalId]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('videoFunctionAppName'))]"
                    ]
                },
                {
                    "name": "MSDeploy",
                    "type": "extensions",
                    "location": "[resourceGroup().location]",
                    "apiVersion": "2015-08-01",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', variables('videoFunctionAppName'))]"
                    ],
                    "properties": {
                        "packageUri": "[variables('videoFunctionAppPackageURL')]"
                    }
                }
            ],
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('videoFunctionSAName'))]",
                "[resourceId('Microsoft.Insights/components', variables('videoAppInsightsName'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "kind": "StorageV2",
            "apiVersion": "2019-04-01",
            "name": "[variables('videoFunctionSAName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2015-05-01",
            "name": "[variables('videoAppInsightsName')]",
            "location": "[resourceGroup().location]",
            "kind": "web",
            "properties": {
                "Application_Type": "other",
                "ApplicationId": "[variables('videoFunctionAppName')]",
                "Request_Source": "rest"
            }
        }
    ]
}