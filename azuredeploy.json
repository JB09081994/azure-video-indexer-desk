{
    "contentVersion": "1.0.0.0",
    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "parameters": {
        "name": {
            "type": "string"
        },
        "eventgrid_secret": {
            "type": "securestring"
        }
    },
    "variables": {
        "functionAppName": "[parameters('name')]",
        "applicationInsightsName": "[parameters('name')]",
        "storageAccountName": "[concat(parameters('name'), uniquestring(resourceGroup().id))]",
        "dropInStorageAccountName": "[concat('dropin' , uniquestring(resourceGroup().id))]",
        "FunctionName": "IndexNewUploadedFile",
        "functionUrl": "[concat('https://', variables('FunctionAppName'),'.azurewebsites.net/runtime/webhooks/eventgrid?functionName=', variables('FunctionName'),'&code=')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp,linux",
            "name": "[parameters('name')]",
            "apiVersion": "2016-08-01",
            "location": "[resourceGroup().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "node"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "10.14.1"
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/', variables('applicationInsightsName')), '2015-05-01').InstrumentationKey]"
                        }
                    ]
                },
                "name": "[variables('functionAppName')]",
                "clientAffinityEnabled": false,
                "reserved": true
            },
            "resources": [
                {
                    "name": "default/eventgrid_extension",
                    "apiVersion": "2018-11-01",
                    "type": "host/systemkeys",
                    "properties": {
                        "name": "eventgrid_extension",
                        "value": "[parameters('eventgrid_secret')]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
                    ]
                }
            ],
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
                "[resourceId('Microsoft.Insights/components', variables('applicationInsightsName'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "kind": "StorageV2",
            "apiVersion": "2019-04-01",
            "name": "[variables('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "kind": "StorageV2",
            "apiVersion": "2019-04-01",
            "name": "[variables('dropInStorageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard_LRS"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2019-04-01",
            "name": "[concat(variables('dropInStorageAccountName'), '/default/drop')]",
            "dependsOn": [
                "[variables('dropInStorageAccountName')]"
            ],
            "properties": {
                "publicAccess": "None"
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2015-05-01",
            "name": "[variables('applicationInsightsName')]",
            "location": "[resourceGroup().location]",
            "kind": "web",
            "properties": {
                "Application_Type": "other",
                "ApplicationId": "[variables('functionAppName')]",
                "Request_Source": "rest"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/providers/eventSubscriptions",
            "name": "[concat(variables('dropInStorageAccountName'), '/Microsoft.EventGrid/', 'filedrop')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2019-06-01",
            "properties": {
                "topic": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Storage/StorageAccounts/', variables('dropInStorageAccountName'))]",
                "destination": {
                    "endpointType": "WebHook",
                    "properties": {
                        "endpointUrl": "[concat(variables('functionUrl'), listKeys(resourceId('Microsoft.Web/sites/host/', variables('functionAppName'), 'default'),'2016-08-01').systemkeys.eventgrid_extension)]"
                    }
                },
                "filter": {
                    "includedEventTypes": [
                        "Microsoft.Storage.BlobCreated"
                    ],
                    "advancedFilters": [
                        {
                            "operatorType": "StringBeginsWith",
                            "key": "subject",
                            "values": [
                                "/blobServices/default/containers/drop/"
                            ]
                        }
                    ]
                },
                "labels": [
                    "[concat('functions-', toLower(variables('FunctionName')))]"
                ],
                "eventDeliverySchema": "EventGridSchema"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]",
                "[resourceId('Microsoft.Web/sites/host/systemkeys', variables('functionAppName'),'default','eventgrid_extension')]"
            ]
        }
    ]
}