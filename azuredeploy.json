{
    "contentVersion": "1.0.0.0",
    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "parameters": {
        "name": {
            "type": "string"
        },
        "videoIndexerAccountId": {
            "type": "securestring"
        },
        "videoIndexerSubscriptionKey": {
            "type": "securestring"
        },
        "videoIndexerRegion": {
            "type": "string"
        }
    },
    "variables": {
        "dropinStorageARMTemplateURI": "https://raw.githubusercontent.com/l8518/azure-video-indexer-desk/master/azuredeploy-dropin.json",
        "cosmosStorageARMTemplateURI": "https://raw.githubusercontent.com/l8518/azure-video-indexer-desk/master/azuredeploy-cosmos.json",
        "videoFunctionsARMTemplateURI": "https://raw.githubusercontent.com/l8518/azure-video-indexer-desk/master/azuredeploy-video.json"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "videoFunctionTemplate",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri":"[variables('videoFunctionsARMTemplateURI')]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                 "name":{"value": "[parameters('name')]"},
                 "videoIndexerAccountId":{"value": "[parameters('videoIndexerAccountId')]"},
                 "videoIndexerSubscriptionKey":{"value": "[parameters('videoIndexerSubscriptionKey')]"},
                 "videoIndexerRegion":{"value": "[parameters('videoIndexerRegion')]"}
               },
               "dependsOn": [
                "cosmosFunctionTemplate",
                "dropinStorageTemplate]"
            ]
            }
         },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "cosmosFunctionTemplate",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri":"[variables('cosmosStorageARMTemplateURI')]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                 "name":{"value": "[parameters('name')]"},
                 "videoIndexerAccountId":{"value": "[parameters('videoIndexerAccountId')]"},
                 "videoIndexerSubscriptionKey":{"value": "[parameters('videoIndexerSubscriptionKey')]"},
                 "videoIndexerRegion":{"value": "[parameters('videoIndexerRegion')]"}
               }
            }
         },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "dropinStorageTemplate",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"[variables('dropinStorageARMTemplateURI')]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {}
            }
         }
    ]
}