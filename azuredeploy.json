{
    "contentVersion": "1.0.0.0",
    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/deploymentTemplate.json#",
    "parameters": {
        "name": {
            "type": "string"
        },
        "videoIndexerAccountId": {
            "type": "securestring"
        },
        "videoIndexerSubscriptionKey": {
            "type": "securestring"
        },
        "videoIndexerRegion": {
            "type": "string"
        },
        "arm-template-folder-url": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/l8518/azure-video-indexer-desk/master"
        }
    },
    "variables": {
        "deskStorageARMTemplateURI": "[concat(parameters('arm-template-folder-url'), '/azuredeploy-desk.json' )]",
        "cosmosFunctionsARMTemplateURI": "[concat(parameters('arm-template-folder-url'), '/azuredeploy-cosmos.json' )]",
        "videoFunctionsARMTemplateURI": "[concat(parameters('arm-template-folder-url'), '/azuredeploy-video.json' )]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "videoFunctionTemplate",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri":"[variables('videoFunctionsARMTemplateURI')]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                 "name":{"value": "[parameters('name')]"},
                 "videoIndexerAccountId":{"value": "[parameters('videoIndexerAccountId')]"},
                 "videoIndexerSubscriptionKey":{"value": "[parameters('videoIndexerSubscriptionKey')]"},
                 "videoIndexerRegion":{"value": "[parameters('videoIndexerRegion')]"}
               }
            },
            "dependsOn": [
                "cosmosFunctionTemplate"
            ]
         },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "cosmosFunctionTemplate",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri":"[variables('cosmosFunctionsARMTemplateURI')]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {
                 "name":{"value": "[parameters('name')]"},
                 "videoIndexerAccountId":{"value": "[parameters('videoIndexerAccountId')]"},
                 "videoIndexerSubscriptionKey":{"value": "[parameters('videoIndexerSubscriptionKey')]"},
                 "videoIndexerRegion":{"value": "[parameters('videoIndexerRegion')]"},
                 "cosmosdbConnection": {"value" : "[reference('deskStorageTemplate').outputs.COSMOSDB_CONNECTION.value]"}
               }
            },
            "dependsOn": [
                "deskStorageTemplate"
            ]
         },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "deskStorageTemplate",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                 "uri":"[variables('deskStorageARMTemplateURI')]",
                 "contentVersion":"1.0.0.0"
              },
              "parameters": {}
            }
         }
    ]
}